<?xml version="1.0" encoding="UTF-8"?>
<project name="hs_results_management_system" default="all">
  
  
  <property file="hs_results_management_system.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.bcprov-jdk15on-160.classpath">
    <pathelement location="${basedir}/../../../../Java Libs/bcprov-jdk16-146.jar/bcprov-jdk15on-160.jar"/>
  </path>
  
  <path id="library.bctsp-jdk16-1.46.classpath">
    <pathelement location="${basedir}/../../../../Java Libs/bctsp-jdk16-1.46.jar/bctsp-jdk16-1.46.jar"/>
  </path>
  
  <path id="library.h2-1.4.197.classpath">
    <pathelement location="${basedir}/../../../../Program Files (x86)/H2/bin/h2-1.4.197.jar"/>
  </path>
  
  <path id="library.itextpdf-5.4.0.classpath">
    <pathelement location="${basedir}/../../../../Java Libs/itextpdf-5.4.0.jar"/>
  </path>
  
  <path id="library.jcommon-1.0.23.classpath">
    <pathelement location="${basedir}/../../../../Java Libs/jcommon-1.0.23.jar"/>
  </path>
  
  <path id="library.jfreechart-1.0.19.classpath">
    <pathelement location="${basedir}/../../../../Java Libs/jfreechart-1.0.19.jar"/>
  </path>
  
  <path id="library.mysql-connector-java-5.1.46.classpath">
    <pathelement location="${basedir}/../../../../Java Libs/mysql-connector-java-5.1.46.jar"/>
  </path>
  
  <path id="library.sqlite-jdbc-3.21.0.classpath">
    <pathelement location="${basedir}/../../../../Java Libs/sqlite-jdbc-3.21.0.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_hs_results_management_system.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.hs_results_management_system" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.hs_results_management_system" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.hs_results_management_system:jar" value="${basedir}/out/artifacts/HS_Results_Management_System_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.HS Results Management System.jar" value="${artifacts.temp.dir}/HS Results Management System.jar"/>
  </target>
  
  <target name="artifact.hs_results_management_system:jar" depends="init.artifacts, compile.module.hs_results_management_system" description="Build &#39;HS Results Management System:jar&#39; artifact">
    <property name="artifact.temp.output.hs_results_management_system:jar" value="${artifacts.temp.dir}/HS_Results_Management_System_jar"/>
    <mkdir dir="${artifact.temp.output.hs_results_management_system:jar}"/>
    <jar destfile="${temp.jar.path.HS Results Management System.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${hs_results_management_system.output.dir}"/>
      <zipfileset src="${basedir}/../../../../Java Libs/bcprov-jdk16-146.jar/bcprov-jdk15on-160.jar"/>
      <zipfileset src="${basedir}/../../../../Java Libs/jfreechart-1.0.19.jar"/>
      <zipfileset src="${basedir}/../../../../Java Libs/jcommon-1.0.23.jar"/>
      <zipfileset src="${basedir}/../../../../Program Files (x86)/H2/bin/h2-1.4.197.jar"/>
      <zipfileset src="${basedir}/../../../../Java Libs/sqlite-jdbc-3.21.0.jar"/>
      <zipfileset src="${basedir}/../../../../Java Libs/mysql-connector-java-5.1.46.jar"/>
      <zipfileset src="${basedir}/../../../../Java Libs/itextpdf-5.4.0.jar"/>
    </jar>
    <copy file="${temp.jar.path.HS Results Management System.jar}" tofile="${artifact.temp.output.hs_results_management_system:jar}/HS Results Management System.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.hs_results_management_system:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.hs_results_management_system:jar}"/>
    <copy todir="${artifact.output.hs_results_management_system:jar}">
      <fileset dir="${artifact.temp.output.hs_results_management_system:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>